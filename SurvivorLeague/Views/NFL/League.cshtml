@model List<SurvivorLeague.Models.PlayerSelectionViewModel>

@{
    ViewBag.Title = "League";
}



<h2 style="text-align:center;">@ViewBag.Header</h2>
<hr />

<div>
    <div class="container">
        <div class="row text-center my-1 lead font-weight-bold">
            <div class="col-3 col-lg-1 d-lg-none"></div>
            <div class="col-3 col-lg-2">
                Week
            </div>
            <div class="col-3 col-lg-2">
                Selection
            </div>
            <div class="col-3 col-lg-7"></div>

        </div>

        @for (int x = 1; x <= 17; x++)
        {
            <div class="row text-center my-1 lead font-weight-bold">
                <div class="col-3 col-lg-1 d-lg-none"></div>
                @using (var item = Model.SingleOrDefault(m => m.Week == x))
                {
                    if (Model.SingleOrDefault(m => m.Week == x) != null)
                    {
                        <a class="col-6 col-lg-4" onmouseover="AddBorder(this);" onmouseout="RemoveBorder(this);" style="color:@item.TeamColors.Split('|')[1]; background-color:@item.TeamColors.Split('|')[0]" href="/NFL/WeeklyMatchups?LeagueId=@item.LeagueId&SeasonId=@item.SeasonId&Week=@item.Week">
                            <div class="row">
                                <div class="col-6">
                                    @item.Week
                                </div>
                                <div class="col-6">
                                    @item.SelectedTeamName
                                </div>
                            </div>
                        </a>
                    }

// TODO: Need to add logic when there are no selections yet
                    else
                    {
                        <a class="col-6 col-lg-4 team-colors-reversed" href="/NFL/WeeklyMatchups?LeagueId=@Model.First().LeagueId&SeasonId=@Model.First().SeasonId&Week=@x">
                            <div class="row" onmouseover="AddBorder(this);" onmouseout="RemoveBorder(this);">
                                <div class="col-6">
                                    @x.ToString()
                                </div>
                                <div class="col-6">
                                    -----
                                </div>
                            </div>
                        </a>

                    }
                }
                <div class="col-3 col-lg-7"></div>

            </div>

        }



    </div>
    <hr />
</div>

